# ==========================================
# ENHANCED SECURE .HTACCESS FOR LARAVEL
# Madridejos DTS - Production Configuration
# ==========================================

<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # ==========================================
    # SECURITY HEADERS
    # ==========================================
    
    <IfModule mod_headers.c>
        # Prevent clickjacking attacks
        Header always set X-Frame-Options "SAMEORIGIN"
        
        # Prevent MIME type sniffing
        Header always set X-Content-Type-Options "nosniff"
        
        # Enable XSS protection
        Header always set X-XSS-Protection "1; mode=block"
        
        # Referrer Policy
        Header always set Referrer-Policy "strict-origin-when-cross-origin"
        
        # Content Security Policy - ADJUSTED for typical Laravel apps
        # Modify this based on your actual needs (CDNs, external scripts, etc.)
        Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https:; connect-src 'self';"
        
        # Permissions Policy
        Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
        
        # Strict Transport Security - ENABLED (uncomment once HTTPS is confirmed working)
        # Test first, then uncomment:
        # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Remove server information
        Header unset X-Powered-By
        Header always unset X-Powered-By
    </IfModule>

    # Remove server signature
    ServerSignature Off

    # ==========================================
    # BLOCK ACCESS TO SENSITIVE FILES
    # ==========================================
    
    # Block access to .env and all dot files
    <FilesMatch "^\.">
        Require all denied
    </FilesMatch>
    
    # Block access to specific sensitive files
    <FilesMatch "(^#.*#|\.(bak|backup|conf|dist|fla|in[ci]|log|orig|psd|sh|sql|sw[op])|~)$">
        Require all denied
    </FilesMatch>
    
    # Block access to composer and package manager files
    <FilesMatch "(composer\.(json|lock)|package(-lock)?\.json|yarn\.lock)$">
        Require all denied
    </FilesMatch>
    
    # Block access to Laravel-specific files
    <FilesMatch "(artisan|server\.php|phpunit\.xml|\.env.*|webpack\.mix\.js)$">
        Require all denied
    </FilesMatch>

    # ==========================================
    # PROTECT AGAINST COMMON ATTACKS
    # ==========================================
    
    # Block SQL injection and XSS attempts
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} (\.\./|\.\.\\) [OR]
    RewriteCond %{QUERY_STRING} (union|select|insert|drop|update|delete|replace|truncate|create|alter|cast|set|declare|exec|script).*\( [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Block file injection attempts
    RewriteCond %{REQUEST_URI} \.(php|php3|php4|php5|phtml|pl|py|jsp|asp|htm|shtml|sh|cgi)\. [NC,OR]
    RewriteCond %{REQUEST_URI} (base64_encode|eval|gzinflate|gzuncompress|gzdeflate|proc_open|popen|curl_exec|system|shell_exec|passthru) [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Block bad user agents - REFINED (allows legitimate crawlers)
    RewriteCond %{HTTP_USER_AGENT} (libwww-perl|wget|python|nikto|scan|java|winhttp|clshttp|loader|fetch|sqlmap|havij|acunetix) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (<|>|'|%0A|%0D|%27|%3C|%3E|%00) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} ^.{500,}$ [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Block suspicious request methods
    RewriteCond %{REQUEST_METHOD} ^(TRACE|DELETE|TRACK|DEBUG|PUT) [NC]
    RewriteRule ^(.*)$ - [F,L]

    # Block proxy header injection
    RewriteCond %{HTTP:X-Forwarded-For} .*(<|>|'|%0A|%0D|%27|%3C|%3E|%00).* [NC,OR]
    RewriteCond %{HTTP:X-Forwarded-Host} .*(<|>|'|%0A|%0D|%27|%3C|%3E|%00).* [NC,OR]
    RewriteCond %{HTTP:X-Forwarded-Server} .*(<|>|'|%0A|%0D|%27|%3C|%3E|%00).* [NC]
    RewriteRule ^(.*)$ - [F,L]

    # ==========================================
    # FORCE HTTPS - READY TO ENABLE
    # Uncomment these lines once SSL certificate is installed
    # ==========================================
    
    # RewriteCond %{HTTPS} off
    # RewriteCond %{HTTP:X-Forwarded-Proto} !https
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # ==========================================
    # STANDARD LARAVEL ROUTING
    # ==========================================
    
    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

</IfModule>

# ==========================================
# DISABLE DIRECTORY BROWSING
# ==========================================
Options -Indexes

# ==========================================
# PHP SECURITY SETTINGS
# ==========================================
<IfModule mod_php.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_flag expose_php Off
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 1
    php_value session.cookie_samesite Lax
</IfModule>

# For PHP 7.x and 8.x
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_flag expose_php Off
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 1
</IfModule>

# ==========================================
# GZIP COMPRESSION (Performance)
# ==========================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml+rss application/rss+xml application/atom+xml image/svg+xml
</IfModule>

# ==========================================
# BROWSER CACHING (Performance)
# ==========================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # Documents
    ExpiresByType application/pdf "access plus 1 month"
    
    # Other
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresDefault "access plus 2 days"
</IfModule>

# ==========================================
# LIMIT REQUEST SIZE (Prevent DoS)
# 10MB = 10485760 bytes - adjust based on your upload needs
# ==========================================
LimitRequestBody 10485760

# ==========================================
# ADDITIONAL SECURITY MEASURES
# ==========================================

# Prevent access to version control directories
RedirectMatch 404 /\.git
RedirectMatch 404 /\.svn

# Disable ETags for better caching
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None